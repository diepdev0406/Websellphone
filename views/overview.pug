extends base
block content
    main.main
        .card-container
            each phone in phones
                .card
                    .card__header
                        .card__picture
                            img.card__picture-img(src=`img/phones/${phone.image}`, alt=`${phone.name}`)
                    .card__details
                        h4.card__sub-heading= `${phone.name}`
                        - const price = new Intl.NumberFormat('en-US').format(phone.price)
                        h4.card__sub-heading
                            span.card__footer-value= price
                            | 
                            span.card__footer-text VNĐ
                    .card__footer
                        a.btn.btn--green.btn--small(href=`/phone/${phone.slug}`) Chi tiết
                        p.card__ratings
                            span.card__footer-value= phone.ratingsAverage
                            | 
                            span.card__footer-text= `Đánh giá (${phone.ratingsQuantity})`